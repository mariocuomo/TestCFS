openapi: 3.0.0
info:
  title: Microsoft Defender for Endpoint API
  version: 1.0.0
  description: API to add or remove multiple machine tags in Microsoft Defender for Endpoint.
servers:
  - url: https://api.securitycenter.microsoft.com
paths:
  /api/machines/{id}/tags:
    post:
      summary: Add or remove multiple machine tags
      operationId: addOrRemoveMachineTags
      parameters:
        - name: id
          in: path
          required: true
          schema:
            type: string
          description: The ID of the machine
          example: 555a7e6b4cfe6e97b30d5cfbd5ed8b91fa875d44
      requestBody:
        description: Tags to be added or removed
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                action:
                  type: string
                  description: The action to perform (add or remove)
                  example: add
                tags:
                  type: array
                  items:
                    type: string
                  description: List of tags to be added or removed
                  example: ["tag1", "tag2"]
      responses:
        '200':
          description: Tags updated successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  status:
                    type: string
                    description: Status of the operation
                    example: success
        '400':
          description: Bad request
        '401':
          description: Unauthorized
        '403':
          description: Forbidden
        '500':
          description: Internal server error