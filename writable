openapi: 3.0.0
info:
  title: Microsoft Defender for Endpoint API
  version: 1.0.0
  description: API to create threat indicators in Microsoft Defender for Endpoint.
servers:
  - url: https://api.security.microsoft.com
paths:
  /api/indicators:
    post:
      summary: Create a new threat indicator
      operationId: createThreatIndicator
      requestBody:
        description: Threat indicator object that needs to be added
        required: true
        content:
          application/json:
            schema:
              type: object
              properties:
                action:
                  type: string
                  description: The action to apply to the indicator
                description:
                  type: string
                  description: Description of the indicator
                expirationTime:
                  type: string
                  format: date-time
                  description: Expiration time of the indicator
                severity:
                  type: string
                  description: Severity of the indicator
                tags:
                  type: array
                  items:
                    type: string
                  description: Tags associated with the indicator
                title:
                  type: string
                  description: Title of the indicator
                type:
                  type: string
                  description: Type of the indicator
                value:
                  type: string
                  description: Value of the indicator
      responses:
        '201':
          description: Indicator created successfully
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    type: string
                    description: ID of the created indicator
        '400':
          description: Bad request
        '401':
          description: Unauthorized
        '403':
          description: Forbidden
        '500':
          description: Internal server error
components:
  securitySchemes:
    OAuth2:
      type: oauth2
      flows:
        authorizationCode:
          authorizationUrl: https://login.microsoftonline.com/{tenantId}/oauth2/v2.0/authorize
          tokenUrl: https://login.microsoftonline.com/{tenantId}/oauth2/v2.0/token
          scopes:
            https://graph.microsoft.com/.default: Grants access to Microsoft Graph API
security:
  - OAuth2: 